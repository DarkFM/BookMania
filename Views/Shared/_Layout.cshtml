    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar__logo">
                <i class="far fa-bookmark"></i> Book<span>Mania</span>
            </div>
            <form action="/" method="get" class="navbar__search-group">
                <select class="navbar__categories" name="categories">
                    <option value="0">All</option>
                    <option value="1">Horror</option>
                    <option value="2">Biography</option>
                    <option value="3">Action and adventure </option>
                    <option value="4">Fantasy</option>
                </select>
                <input type="search" name="query" autocomplete="off" placeholder="Search Thousands of Books..." />
                <button class="navbar__search-btn" type="submit"><i class="fas fa-search"></i></button>
            </form>
            <div class="navbar__nav-links">
                <div class="nav-links-container">
                    <a href="#" title="Favourites" class="nav-icon"><i class="far fa-heart"></i></a>
                    <a href="#" title="SignIn/Register" class="nav-icon"><i class="fas fa-sign-in-alt"></i></a>
                    <a href="#" title="View Cart" class="nav-icon"><i class="fas fa-shopping-cart"></i></a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted">
            @*<div class="container">
                    &copy; 2019 - BookMania - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>*@
        </footer>
    </div>


